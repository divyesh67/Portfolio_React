---
import type { CollectionEntry } from "astro:content";
const { project }: { project: CollectionEntry<'project'> } = Astro.props;
---
<a href={`/projects/${project.slug}`} class="block rounded-2xl border border-slate-200 p-6 hover:border-[var(--accent)] transition bg-white">
  <h3 class="text-lg font-semibold">{project.data.title}</h3>
  <p class="mt-1 text-slate-600">{project.data.summary}</p>
  {project.data.tags.length > 0 && (
    <div class="mt-3 flex flex-wrap gap-2">
      {project.data.tags.map(t => <span class="text-[10px] px-2 py-0.5 rounded-full bg-slate-100 border">{t}</span>)}
    </div>
  )}
</a>
